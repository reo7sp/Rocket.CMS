.top-bar
	width 100%
	box-sizing border-box
	padding 10px 64px
	margin-bottom 16px
	background-color #00b000
	color #fff

	&--fixed
		position fixed
		left 0
		top 0
		z-index 99
		transform translateZ(0)
		backface-visibility hidden

	&__back-button
		display inline
		cursor pointer
		font-size 1.25em
		margin-right 4px

		&:before
			content "â†©"

	&__title
		display inline
		font-size 1.25em

	&__desc
		display inline
		margin-left 20px

	&__buttons
		display inline
		float right

		&__button
			display inline
			cursor pointer
			font-size 1.25em
			margin 0 8px

	&__tabs
		display inline
		margin-right 8px

		&__tab
			display inline
			margin 0 4px
			padding 4px 8px
			background-color #dfb
			border 1px solid
			border-radius 4px
			border-color #dfb
			color #000
			cursor pointer

			&--active
				padding 8px 12px 16px 12px
				color #000
				background-color #fff
				border-color #fff

